{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Slang",
  "scopeName": "source.slang",
  "patterns": [
    { "include": "#comments" },
    { "include": "#declarations" },
    { "include": "#statements" },
    { "include": "#expressions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.slang",
          "match": "//.*$"
        }
      ]
    },
    "declarations": {
      "patterns": [
        { "include": "#function-declaration" },
        { "include": "#struct-declaration" },
        { "include": "#enum-declaration" },
        { "include": "#union-declaration" }
      ]
    },
    "function-declaration": {
      "begin": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "beginCaptures": {
        "1": { "name": "keyword.declaration.function.slang" },
        "2": { "name": "entity.name.function.slang" }
      },
      "end": "\\)",
      "patterns": [
        { "include": "#parameter-list" }
      ]
    },
    "parameter-list": {
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.parameter.slang" },
            "2": { "name": "storage.type.slang" }
          }
        }
      ]
    },
    "struct-declaration": {
      "match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.struct.slang" },
        "2": { "name": "entity.name.type.struct.slang" }
      }
    },
    "enum-declaration": {
      "match": "\\b(enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.enum.slang" },
        "2": { "name": "entity.name.type.enum.slang" }
      }
    },
    "union-declaration": {
      "match": "\\b(union)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*=",
      "captures": {
        "1": { "name": "keyword.declaration.union.slang" },
        "2": { "name": "entity.name.type.union.slang" }
      }
    },
    "statements": {
      "patterns": [
        { "include": "#variable-declaration" },
        { "include": "#control-keywords" },
        { "include": "#case-keyword" }
      ]
    },
    "variable-declaration": {
      "match": "\\b(var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.declaration.var.slang" },
        "2": { "name": "variable.other.slang" },
        "3": { "name": "storage.type.slang" }
      }
    },
    "control-keywords": {
      "match": "\\b(if|else|for|switch|return)\\b",
      "name": "keyword.control.slang"
    },
    "case-keyword": {
      "match": "\\b(case)\\b",
      "name": "keyword.declaration.case.slang"
    },
    "expressions": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#booleans" },
        { "include": "#builtin-types" },
        { "include": "#operators" },
        { "include": "#function-call" },
        { "include": "#member-access" }
      ]
    },
    "strings": {
      "name": "string.quoted.double.slang",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.slang",
          "match": "\\\\[nrt\\\\\"\\(\\)]"
        },
        {
          "name": "meta.interpolation.slang",
          "begin": "\\\\\\(",
          "beginCaptures": {
            "0": { "name": "punctuation.section.interpolation.begin.slang" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.section.interpolation.end.slang" }
          },
          "patterns": [
            { "include": "#expressions" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.slang",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.slang",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "booleans": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.slang"
    },
    "builtin-types": {
      "match": "\\b(Int|Float|String|Bool|Void)\\b",
      "name": "storage.type.builtin.slang"
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.slang",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.slang",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.slang",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.slang",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arrow.slang",
          "match": "->"
        },
        {
          "name": "keyword.operator.union.slang",
          "match": "\\|"
        }
      ]
    },
    "function-call": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.slang" }
      }
    },
    "member-access": {
      "match": "\\.([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "variable.other.member.slang" }
      }
    }
  }
}
